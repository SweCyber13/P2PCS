<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:layout_margin="5dp"
                                             android:layout_marginTop="10dp"
>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="160dp" android:id="@+id/layoutCardBooking" android:minHeight="140dp"
            android:layout_margin="1dp"
            android:paddingStart="1dp" android:paddingTop="1dp"
            android:paddingEnd="1dp" android:paddingBottom="1dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/searchlayout"
            android:padding="15dp"

    >
        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/carInfo"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="2dp">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" app:srcCompat="@drawable/car"
                    android:id="@+id/car"/>
            <TextView
                    android:text="Opel Corsa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:id="@+id/Info"/>
        </RelativeLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintRight_toRightOf="parent"

                android:id="@+id/travelInfo"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent">


            <android.support.constraint.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintWidth_percent="0.5"

                    app:layout_constraintLeft_toLeftOf="parent"

                    android:id="@+id/col1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                        android:text="DATA INIZIO" android:id="@+id/DataI"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintHeight_percent="0.25"


                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"


                        app:layout_constraintTop_toTopOf="parent"
                        android:gravity="center"


                />


                <TextView
                        android:text="DATA FINE" android:id="@+id/DataF"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintHeight_percent="0.25"


                        app:layout_constraintTop_toBottomOf="@+id/DataI"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:gravity="center"

                />


                <TextView
                        android:text="CITTA INIZIO" android:id="@+id/CittaI"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintHeight_percent="0.25"

                        app:layout_constraintTop_toBottomOf="@+id/DataF"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:gravity="center"
                />
                <TextView
                        android:text="STATO"
                        android:id="@+id/InCorso"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintHeight_percent="0.25"

                        app:layout_constraintTop_toBottomOf="@+id/CittaI"

                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:gravity="center"


                />
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="0dp" android:id="@+id/col2"
                    android:layout_height="0dp"
                    app:layout_constraintWidth_percent="0.5"
                    app:layout_constraintRight_toRightOf="parent"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
            >
                <TextView
                        android:text="ORA INIZIO"  android:id="@+id/OraI"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintHeight_percent="0.25"

                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"


                        app:layout_constraintTop_toTopOf="parent"
                        android:gravity="center"
                />
                <TextView
                        android:text="ORA FINE"  android:id="@+id/OraF"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintHeight_percent="0.25"

                        app:layout_constraintTop_toBottomOf="@+id/OraI"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:gravity="center"

                />
                <TextView
                        android:text="CITTA FINE"  android:id="@+id/CittaF"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintHeight_percent="0.25"
                        app:layout_constraintTop_toBottomOf="@+id/OraF"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:gravity="center"

                />
                <Button
                        android:text="@string/contatta"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        app:layout_constraintHeight_percent="0.25"
                        app:layout_constraintTop_toBottomOf="@+id/CittaF"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:background="@drawable/button_search"
                        android:padding="2dp"


                        android:id="@+id/button4"/>
            </android.support.constraint.ConstraintLayout>


        </android.support.constraint.ConstraintLayout>









    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>