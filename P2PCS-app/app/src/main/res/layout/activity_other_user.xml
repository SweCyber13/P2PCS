<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp" android:src="@drawable/avatar"
            app:layout_constraintHeight_percent="0.25"
            android:id="@+id/image_user"
            tools:ignore="MissingConstraints"/>
    <Button
            android:text="contatta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_contact" tools:ignore="MissingConstraints"/>


        <android.support.constraint.ConstraintLayout android:layout_width="0dp"
                                                     android:layout_height="0dp"
                                                     app:layout_constraintWidth_percent="0.5"
                                                     app:layout_constraintHeight_percent="0.06"
                                                     android:id="@+id/left_card"
                                                     app:layout_constraintTop_toBottomOf="@+id/image_user"
                                                     tools:ignore="MissingConstraints">


            <TextView
                    android:text="Punti"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.4"
                    android:id="@+id/textView5"/>
            <TextView
                    android:text="0.0"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.6"
                    app:layout_constraintTop_toBottomOf="@+id/textView5"
                    android:id="@+id/textView4"/>
        </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout android:layout_width="0dp"
                                                 android:layout_height="0dp"
                                                 app:layout_constraintWidth_percent="0.5"
                                                 app:layout_constraintHeight_percent="0.06"
                                                 android:id="@+id/right_card"
                                                 app:layout_constraintTop_toBottomOf="@+id/image_user"
                                                 app:layout_constraintLeft_toRightOf="@+id/left_card"
                                                 tools:ignore="MissingConstraints">


        <TextView
                android:text="Media"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.4"
                android:id="@+id/textView6"/>
        <TextView
                android:text="0.0"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                android:id="@+id/textView7"/>
    </android.support.constraint.ConstraintLayout>

    <TextView
            android:text="Username"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.04"
            app:layout_constraintTop_toBottomOf="@+id/left_card"
            android:id="@+id/textView8" tools:ignore="NotSibling"/>

    <TextView
            android:text="Username"
            android:layout_width="match_parent"
            android:textSize="22sp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            android:id="@+id/textView9"/>

    <TextView
            android:text="Nome,Cognome"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.04"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            android:id="@+id/textView10" tools:ignore="NotSibling"/>

    <TextView
            android:text="Nome,Cognome"
            android:layout_width="match_parent"
            android:textSize="22sp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            android:id="@+id/textView11"/>

    <TextView
            android:text="Email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.04"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            android:id="@+id/textView12" tools:ignore="NotSibling"/>

    <TextView
            android:text="Email"
            android:layout_width="match_parent"
            android:textSize="22sp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            android:id="@+id/textView13"/>

    <TextView
            android:text="Città"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.04"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            android:id="@+id/textView14" tools:ignore="NotSibling"/>

    <TextView
            android:text="Città"
            android:layout_width="match_parent"
            android:textSize="22sp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintTop_toBottomOf="@+id/textView14"
            android:id="@+id/textView15"/>

    <TextView
        android:text="Occupazione"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        android:id="@+id/textView16" tools:ignore="NotSibling"/>

    <TextView
            android:text="Occupazione"
            android:layout_width="match_parent"
            android:textSize="22sp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintTop_toBottomOf="@+id/textView16"
            android:id="@+id/textView17"/>

    <TextView
            android:text="Patente"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.04"
            app:layout_constraintTop_toBottomOf="@+id/textView17"
            android:id="@+id/textView18" tools:ignore="NotSibling"/>

    <TextView
            android:text="Patente"
            android:layout_width="match_parent"
            android:textSize="22sp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintTop_toBottomOf="@+id/textView18"
            android:id="@+id/textView19"/>






</android.support.constraint.ConstraintLayout>