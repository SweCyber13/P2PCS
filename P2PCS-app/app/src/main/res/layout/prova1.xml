<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/carRequestsCardList"
        android:orientation="vertical"
>


    <android.support.v7.widget.CardView
            android:id="@+id/carsRequestsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/contenitor">

            <ImageView
                    android:id="@+id/userImage"
                    app:srcCompat="@drawable/avatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"


            />
            <TextView
                    android:id="@+id/userApplicantName"
                    android:text="Nome"
                    android:layout_width="wrap_content"

                    android:layout_height="50dp"

                    android:layout_toEndOf="@+id/userImage"
                    android:layout_alignParentTop="true"/>
            <TextView
                    android:id="@+id/userApplicantSurname"
                    android:text="Cognome"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_toEndOf="@+id/userApplicantName"
                    android:layout_alignParentTop="true"


            />
            <ImageView
                    android:id="@+id/carImage"
                    app:srcCompat="@drawable/car"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/userImage"


            />
            <TextView
                    android:id="@+id/carMarca"
                    android:text="TextView"
                    android:layout_width="wrap_content"

                    android:layout_height="50dp"

                    android:layout_toEndOf="@+id/carImage"
                    android:layout_below="@+id/userApplicantName"


            />
            <TextView
                    android:id="@+id/carModello"
                    android:text="TextView"
                    android:layout_width="wrap_content"

                    android:layout_height="50dp"

                    android:layout_toEndOf="@+id/carMarca"
                    android:layout_below="@+id/userApplicantSurname"

            />
            <ImageView
                    android:id="@+id/calendarStartImage"
                    app:srcCompat="@drawable/ic_calendar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/carImage"

            />
            <TextView
                    android:id="@+id/calendarStartDay"
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_toEndOf="@+id/calendarStartImage"
                    android:layout_below="@+id/carMarca"


            />
            <TextView
                    android:id="@+id/calendarStartHour"
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"

                    android:layout_toEndOf="@+id/calendarStartDay"
                    android:layout_below="@+id/carModello"
            />
            <ImageView
                    android:id="@+id/calendarEndImage"
                    app:srcCompat="@drawable/ic_calendar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/calendarStartImage"
            />
            <TextView
                    android:id="@+id/calendarEndDay"
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_toEndOf="@+id/calendarEndImage"
                    android:layout_below="@+id/calendarStartDay"
            />
            <TextView
                    android:id="@+id/calendarEndHour"
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"

                    android:layout_toEndOf="@+id/calendarEndDay"
                    android:layout_below="@+id/calendarStartHour"
            />
            <TextView
                    android:id="@+id/price"
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_below="@+id/calendarEndImage"
            />
            <Button
                    android:id="@+id/confirm"
                    android:text="Conferma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/price"
                    android:layout_below="@+id/calendarEndDay"

                    />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>