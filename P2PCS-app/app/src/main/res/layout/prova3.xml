<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

        >
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"

                    app:srcCompat="@drawable/avatar"
                    android:id="@+id/profilo"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/firstLine"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"

            />
            <android.support.constraint.ConstraintLayout
                    android:id="@+id/firstLine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    app:layout_constraintTop_toBottomOf="@+id/profilo"
                    app:layout_constraintBottom_toBottomOf="@+id/second_line"
                    android:padding="10dp"

                    android:background="@drawable/my_personal_data_line"


            >

                <TextView
                        android:text="Nome:"
                        android:id="@+id/nomeLabel"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.5"
                        android:layout_height="wrap_content"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"

                        android:gravity="center"

                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/nomeValue"

                        style="@style/MyPersonalData1"


                />
                <TextView
                        android:text="Elena"
                        android:id="@+id/nomeValue"

                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.5"

                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"

                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/nomeLabel"

                        android:gravity="center"

                        style="@style/MyPersonalData2"


                />
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:id="@+id/secondLine"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    app:layout_constraintTop_toBottomOf="@+id/firstLine"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:padding="10dp"

                    android:background="@drawable/my_personal_data_line"

            >

                <TextView
                        android:text="Cognome"
                        android:id="@+id/cognomeLabel"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.5"
                        android:layout_height="wrap_content"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"

                        android:gravity="center"

                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/cognomeValue"

                        style="@style/MyPersonalData1"
                         />
                <TextView
                        android:text="Pontecchiani"
                        android:id="@+id/cognomeValue"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.5"
                        android:layout_height="wrap_content"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"

                        android:gravity="center"

                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/cognomeLabel"

                        style="@style/MyPersonalData2"

                />
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:id="@+id/thirdLine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                <TextView
                        android:text="Username"
                        android:id="@+id/usernameLabel"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.5"
                        android:layout_height="wrap_content"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"

                        android:gravity="center"

                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/usernameValue"

                        style="@style/MyPersonalData1"


                />
                <TextView
                        android:text="Elena"
                        android:id="@+id/usernameValue"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.5"
                        android:layout_height="wrap_content"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"

                        android:gravity="center"

                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/usernameLabel"

                        style="@style/MyPersonalData2"


                />
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/fourthLine">

                <TextView
                        android:text="TextView"
                        android:id="@+id/mailLabel"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.5"
                        android:layout_height="wrap_content"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"

                        android:gravity="center"

                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/mailValue"

                        style="@style/MyPersonalData1"

                />
                <TextView
                        android:text="TextView"
                        android:id="@+id/mailValue"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.5"
                        android:layout_height="wrap_content"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"

                        android:gravity="center"

                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/mailLabel"

                        style="@style/MyPersonalData2"


                />
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>