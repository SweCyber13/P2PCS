<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:background="@color/white">
    <ImageView
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="227dp"
            app:srcCompat="@drawable/bonus" android:id="@+id/bonus"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp" android:orientation="horizontal">
                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="match_parent" app:srcCompat="@drawable/car"
                        android:id="@+id/imageView11"/>
                <TextView
                        android:text="Il tuo primo annuncio!"
                        android:layout_width="270dp"
                        android:gravity="center"
                        android:layout_height="match_parent" android:id="@+id/textViewAnnunce"/>
                <TextView
                        android:text="+15 pt"
                        android:layout_width="70dp"
                        android:maxLines="1"
                        android:gravity="center"
                        android:layout_height="match_parent" android:id="@+id/textViewPoint" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>