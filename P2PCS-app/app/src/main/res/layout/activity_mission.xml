<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:background="@color/white">


    <android.support.constraint.ConstraintLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"

    android:id="@+id/topNavBar">
        <Button
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.50"
                android:text="Missioni"
                android:background="@drawable/button_mission_leaderboard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:id="@+id/buttonMission" />
        <Button
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@id/buttonMission"
                app:layout_constraintWidth_percent="0.50"
                android:background="@drawable/button_mission_leaderboard"
                android:text="Classifiche"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:id="@+id/buttonLeaderBoards"/>
    </android.support.constraint.ConstraintLayout>
    <ScrollView
            app:layout_constraintTop_toBottomOf="@id/topNavBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      app:layout_constraintTop_toTopOf="parent">
    <ImageView

            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/bonus"
            android:id="@+id/bonus"
            />

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/bonus"

        >
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

            >
                <ImageView
                        android:layout_width="0dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/car"
                        android:id="@+id/imageMission"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_percent="0.20"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/imageMission"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Il tuo primo annuncio!"
                        android:layout_width="0dp"
                        android:gravity="center"
                        app:layout_constraintWidth_percent="0.60"
                        android:layout_height="wrap_content"
                        android:id="@+id/descriptionMission"/>
                <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/descriptionMission"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="+15 pt"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.20"
                        android:maxLines="1"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:id="@+id/pointMission"
                        android:layout_weight="1"/>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
        </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>