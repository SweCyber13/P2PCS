<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:layout_margin="5dp"
                                             android:layout_marginTop="10dp"
>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="81dp" app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp" android:id="@+id/layoutCardBooking" android:minHeight="140dp"
                    android:layout_margin="1dp"
                    android:paddingStart="1dp" android:paddingTop="1dp"
                    android:paddingEnd="1dp" android:paddingBottom="1dp" tools:layout_editor_absoluteY="1dp"
                    tools:layout_editor_absoluteX="2dp">
                <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintWidth_percent="0.3"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:id="@+id/carInfo"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="2dp">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" app:srcCompat="@drawable/car"
                            android:id="@+id/car"/>
                    <TextView
                            android:text="Opel Corsa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:id="@+id/Info"/>
                </RelativeLayout>
                <android.support.constraint.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintWidth_percent="0.7"
                        app:layout_constraintRight_toRightOf="parent"

                        android:id="@+id/travelInfo"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent">


                    <TextView
                            android:text="DATA INIZIO" android:id="@+id/DataI"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintHeight_percent="0.25"


                            tools:layout_conversion_wrapWidth="0" tools:layout_conversion_wrapHeight="366"
                            android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                            android:text="DATA FINE" android:id="@+id/DataF"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintHeight_percent="0.25"


                            app:layout_constraintBottom_toTopof="@+id/CittaI"


                            tools:layout_conversion_wrapWidth="0"
                            tools:layout_conversion_wrapHeight="366"
                            app:layout_constraintEnd_toEndOf="parent" tools:layout_editor_absoluteY="56dp"
                            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
                    <TextView
                            android:text="CITTA INIZIO" android:id="@+id/CittaI"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintHeight_percent="0.25"

                            app:layout_constraintBottom_toTopof="@+id/InCorso"
                            tools:layout_conversion_wrapWidth="0"
                            tools:layout_conversion_wrapHeight="366"
                            app:layout_constraintEnd_toEndOf="parent" tools:layout_editor_absoluteY="75dp"
                    />
                    <TextView
                            android:text="STATO"
                            android:id="@+id/InCorso"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintHeight_percent="0.25"

                            app:layout_constraintBottom_toBottomof="parent"


                            tools:layout_conversion_wrapWidth="0"
                            tools:layout_conversion_wrapHeight="366"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>