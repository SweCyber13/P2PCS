<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/white">
    <!--menu missioni/classifiche-->
    <android.support.constraint.ConstraintLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:id="@+id/topNavBar">
        <Button
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.50"
                android:text="Missioni"
                android:background="@drawable/button_mission_leaderboard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:id="@+id/buttonMission" />
        <Button
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@id/buttonMission"
                app:layout_constraintWidth_percent="0.50"
                android:background="@drawable/button_mission_leaderboard"
                android:text="Classifiche"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:id="@+id/buttonLeaderBoards"/>
    </android.support.constraint.ConstraintLayout>
    <!--menu 3 tipi di classifiche-->
    <android.support.constraint.ConstraintLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topNavBar"
android:layout_marginTop="10dp"
            android:id="@+id/topNavBarLeaderboard">
        <Button
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.50"
                android:text="Mensile"
                android:background="@drawable/button_leaderboard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:id="@+id/buttonMonthlyLeaderBoard" />
        <Button
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@id/buttonMonthlyLeaderBoard"
                app:layout_constraintWidth_percent="0.50"
                android:background="@drawable/button_leaderboard"
                android:text="Generale"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:id="@+id/buttonGeneralLeaderboard"/>

    </android.support.constraint.ConstraintLayout>
    <!-- immagini e titolo-->
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="40dp" app:srcCompat="@drawable/rank"
                        android:id="@+id/imageRank"
                        android:layout_gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/topNavBarLeaderboard"


                />
                <TextView
                        android:text="Tabellone punti"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/TitlePuntiRank"
                        android:textSize="40dp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintTop_toBottomOf="@id/imageRank"

                />
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="40dp" app:srcCompat="@drawable/ranking"
                        android:id="@+id/imageCup"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintTop_toBottomOf="@id/TitlePuntiRank"
                />
    <!--classifica-->
                <android.support.constraint.ConstraintLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/imageCup"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">
                    <TextView
                            android:text="Posizione"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/position"
                            app:layout_constraintWidth_percent="0.33"
                            app:layout_constraintLeft_toLeftOf="parent"
                            style="@style/LeaderboardsTextView"


                    />
                    <TextView

                            android:text="Username "
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/username"
                            app:layout_constraintWidth_percent="0.34"
                            app:layout_constraintLeft_toRightOf="@id/position"
                            style="@style/LeaderboardsTextView"

                    />
                    <TextView

                            android:text="Punteggio"
                            android:layout_width="0dp"
                            app:layout_constraintWidth_percent="0.33"
                            android:layout_height="match_parent"
                            android:id="@+id/rank"
                            app:layout_constraintRight_toRightOf="parent"
                            style="@style/LeaderboardsTextView"
                    />
                </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>