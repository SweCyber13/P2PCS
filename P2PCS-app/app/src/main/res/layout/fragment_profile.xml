<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                             android:background="@color/white"
                                                   tools:context=".ProfileFragment" android:id="@+id/frameLayout2">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="200dp" android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/linearLayout">
        <ImageView
                android:src="@drawable/ic_account_circle"

                android:layout_width="wrap_content"
                android:layout_height="169dp"
                android:id="@+id/imageView4"
                android:baselineAligned="true"/>
        <TextView
                android:text="NOME"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/username"/>
    </LinearLayout>
    <Button
            android:text="Prenotazioni Viaggi"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:id="@+id/viaggi"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="16dp"/>
    <Button
            android:text="Prenotazioni Auto"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:id="@+id/auto"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/viaggi"/>

    <Button
            android:text="Premi e Coupons"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:id="@+id/premi"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/auto"/>
    <Button
            android:text="Missioni"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:id="@+id/missioni"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/premi"/>
    <Button
            android:text="Classifiche"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:id="@+id/classifiche"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/missioni"
    />
    <Button
            android:text="Dati Personali"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:id="@+id/datipersonali"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/classifiche"/>
    <Button
            android:text="Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logoutbutton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/datipersonali" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>