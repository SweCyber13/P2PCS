<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:layout_margin="5dp"
                                             android:layout_marginTop="10dp"
>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/layoutCardBooking"
            android:layout_margin="1dp"
            android:paddingStart="1dp" android:paddingTop="1dp"
            android:paddingEnd="1dp" android:paddingBottom="1dp"
            app:layout_constraintTop_toTopOf="parent"
    >
        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.4"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/carInfo"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="2dp">





            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp" app:srcCompat="@drawable/car"
                    android:id="@+id/car"
                    />



        </RelativeLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.6"
                app:layout_constraintLeft_toRightOf="@id/carInfo"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/travelInfo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            <!--  android:layout_paddingLeft="5dp" -->


            <android.support.constraint.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintWidth_percent="0.5"

                    app:layout_constraintLeft_toLeftOf="parent"

                    android:id="@+id/col1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                        android:text="Modello/marca"
                        android:id="@+id/infoCar"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textAlignment="center"
                        app:layout_constraintHeight_percent="0.25"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"


                />


                <TextView
                        android:text="€/h" android:id="@+id/DataF"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintHeight_percent="0.25"
                        android:textAlignment="center"


                        app:layout_constraintTop_toBottomOf="@+id/infoCar"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"

                />


                <TextView
                        android:text="Città " android:id="@+id/CityI"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintHeight_percent="0.25"
                        android:textAlignment="center"

                        app:layout_constraintTop_toBottomOf="@+id/DataF"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                />
                <TextView
                        android:text="Anno produzione"
                        android:id="@+id/InCorso"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintHeight_percent="0.25"
                        android:textAlignment="center"

                        app:layout_constraintTop_toBottomOf="@+id/CityI"

                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"


                />
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="0dp" android:id="@+id/col2"
                    android:layout_height="match_parent"
                    app:layout_constraintWidth_percent="0.5"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
            >

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintHeight_percent="0.50"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/avatar"
                        android:id="@+id/profil_immage"

                />

                <TextView
                        android:text="Username"
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textAlignment="center"
                        app:layout_constraintHeight_percent="0.25"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profil_immage"


                        app:layout_constraintHorizontal_bias="0.0"/>

                <TextView
                        android:text="0.0"
                        android:id="@+id/Rating"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textAlignment="center"
                        app:layout_constraintHeight_percent="0.25"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/username"


                />


            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>