<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">


    <android.support.constraint.ConstraintLayout
            android:id="@+id/lineZero"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.25"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/lineOne"


            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

    >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/image"
                android:background="@drawable/looool"/>
    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
            android:id="@+id/lineOne"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"

            app:layout_constraintTop_toBottomOf="@id/lineZero"
            app:layout_constraintBottom_toTopOf="@id/lineTwo"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"


    >

        <android.support.constraint.ConstraintLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.29"


                app:layout_constraintBottom_toTopOf="@id/secondpart"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"


        >

            <TextView
                    android:id="@+id/partOneLabel"
                    android:text="I tuoi punti.."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"

                    android:gravity="center_horizontal"


                    style="@style/HomeTitleTextView"


            />
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:id="@+id/secondpart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.65"


                app:layout_constraintTop_toBottomOf="@id/header"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"


        >

            <android.support.constraint.ConstraintLayout
                    android:id="@+id/partLeft"
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent="0.5"
                    android:layout_height="wrap_content"

                    app:layout_constraintTop_toTopOf="parent"


                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/partRight"


            >

                <TextView
                        android:id="@+id/puntiRanklabel"
                        android:text="Punti esperienza:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        app:layout_constraintTop_toTopOf="parent"


                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:gravity="center_horizontal"

                        android:layout_margin="0dp"

                        style="@style/MyPersonalData1"


                />
                <TextView
                        android:id="@+id/puntiRankValue"
                        android:text="1000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        app:layout_constraintTop_toBottomOf="@id/puntiRanklabel"


                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:gravity="center_horizontal"


                        style="@style/MyPersonalData2"


/>            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:id="@+id/partRight"
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent="0.5"
                    android:layout_height="wrap_content"

                    app:layout_constraintTop_toTopOf="parent"


                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/partLeft"


            >

                <TextView
                        android:id="@+id/puntiBonusLabel"
                        android:text="Punti buoni:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        app:layout_constraintTop_toTopOf="parent"

                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:gravity="center_horizontal"

                        android:layout_margin="0dp"

                        style="@style/MyPersonalData1"


                        app:layout_constraintHorizontal_bias="0.457"/>
                <TextView
                        android:id="@+id/puntiBonusValue"
                        android:text="150"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        app:layout_constraintTop_toBottomOf="@id/puntiBonusLabel"
                        app:layout_constraintBottom_toBottomOf="parent"

                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:gravity="center_horizontal"


                        style="@style/MyPersonalData2"

                        app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>


            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>


    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
            android:id="@+id/lineTwo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.5"

            app:layout_constraintTop_toBottomOf="@id/lineOne"



            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"



    >

        <android.support.constraint.ConstraintLayout
                android:id="@+id/h2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        >

            <TextView
                    android:text=".. e come utilizzarli!"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/header2"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"

                    android:gravity="center_horizontal"


                    style="@style/HomeTitleTextView"


            />
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.45"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/h2"
                android:id="@+id/mission_coupon">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="0dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.45"
                    android:layout_height="match_parent"
                    android:id="@+id/missionLayout"
                    android:layout_margin="10dp"
            >

                <TextView
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="Guadagna i tuoi punti!"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        style="@style/MyPersonalData1"
                        android:gravity="center"

                        app:layout_constraintHeight_percent="0.55"
                        android:id="@+id/missionLabel"/>
                <Button
                        android:text="Missioni"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/missionLabel"
                        android:layout_width="match_parent"
                        app:layout_constraintHeight_percent="0.45"
                        android:layout_height="0dp"
                        app:layout_constraintRight_toRightOf="parent"
                        android:id="@+id/missionButton"
                        android:background="@drawable/button_leaderboard"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent="0.45"
                    app:layout_constraintLeft_toRightOf="@id/missionLayout"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="match_parent"
                    android:id="@+id/couponLayout"
                    android:layout_margin="10dp">

                <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:id="@+id/couponLabel"
                        android:text="Utilizza i tuoi punti!"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintHeight_percent="0.55"
                        android:gravity="center_horizontal"


                        style="@style/MyPersonalData1"


                />
                <Button
                        android:id="@+id/couponButton"
                        android:text="Coupon"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toBottomOf="@id/couponLabel"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHeight_percent="0.45"
                        android:background="@drawable/button_leaderboard"


                />
            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.45"
                android:id="@+id/eventLayout"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/mission_coupon"
                app:layout_constraintLeft_toLeftOf="parent">

            <TextView
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/eventLabel"
                    android:text="Partecipa agli eventi convenzionati con GaiaGo!"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.5"


                    android:gravity="center_horizontal"


                    style="@style/MyPersonalData1"


                    tools:layout_editor_absoluteY="474dp"/>
            <Button
                    app:layout_constraintTop_toBottomOf="@id/eventLabel"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/eventButton"
                    android:text="Partecipa!"
                    android:padding="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/button_leaderboard"


            />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>