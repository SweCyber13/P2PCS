<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"

                                             android:layout_marginTop="10dp"


                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:id="@+id/layoutCardBooking"
                                             android:layout_margin="8dp"
                                             android:paddingStart="5dp" android:paddingTop="5dp"
                                             android:paddingEnd="5dp" android:paddingBottom="5dp"
                                             app:layout_constraintTop_toTopOf="parent"
                                             android:background="@drawable/mycar_button_background"
>
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/carInfo"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="2dp">


        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp" app:srcCompat="@drawable/car"
                android:id="@+id/car"
                tools:ignore="MissingConstraints"/>

        <Button android:layout_width="match_parent" android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.3"
                app:layout_constraintTop_toBottomOf="@+id/car"
                android:text="Prenota"
                android:id="@+id/reserve"
                android:background="@drawable/button_search"
                tools:ignore="MissingConstraints"/>


    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintLeft_toRightOf="@id/carInfo"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/travelInfo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <!--  android:layout_paddingLeft="5dp" -->


        <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintWidth_percent="0.6"

                app:layout_constraintLeft_toLeftOf="parent"

                android:id="@+id/col1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                    android:text="Modello"
                    android:id="@+id/model"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAlignment="center"
                    app:layout_constraintHeight_percent="0.2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"


            />

            <TextView
                    android:text="Marca"
                    android:id="@+id/marca"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAlignment="center"
                    app:layout_constraintHeight_percent="0.2"

                    app:layout_constraintTop_toBottomOf="@+id/model"


                    tools:ignore="UnknownId"/>


            <TextView
                    android:text="Targa"
                    android:id="@+id/InTarga"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.2"
                    android:textAlignment="center"

                    app:layout_constraintTop_toBottomOf="@+id/marca"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"


            />
            <TextView
                    android:text="€/h" android:id="@+id/rate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.22"
                    android:textAlignment="center"


                    app:layout_constraintTop_toBottomOf="@+id/InTarga"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"

            />


            <TextView
                    android:text="Città " android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.2"
                    android:textAlignment="center"

                    app:layout_constraintTop_toBottomOf="@+id/rate"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
            />
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="0dp" android:id="@+id/col2"
                android:layout_height="match_parent"
                app:layout_constraintWidth_percent="0.4"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        >

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.50"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/avatar"
                    android:id="@+id/profil_immage"

            />

            <TextView
                    android:text="Username"
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAlignment="center"
                    app:layout_constraintHeight_percent="0.25"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profil_immage"


                    app:layout_constraintHorizontal_bias="0.0"/>

            <TextView
                    android:text="0.0"
                    android:id="@+id/Rating"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAlignment="center"
                    app:layout_constraintHeight_percent="0.25"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/username"


            />


        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
