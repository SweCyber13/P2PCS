<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:id="@+id/container">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/cardDisp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"

            android:layout_margin="10dp"


            android:padding="5dp"

            android:background="@drawable/leaderboard_background"

            tools:layout_editor_absoluteX="10dp">

        <TextView
                android:id="@+id/label1"
                android:text="Modello:"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.4"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/model"
                style="@style/MyPersonalData1"


        />
        <TextView
                android:id="@+id/model"
                android:text="Punto"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.3"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/marca"
                app:layout_constraintLeft_toRightOf="@+id/label1"
                style="@style/MyPersonalData2"


        />
        <TextView
                android:id="@+id/marca"
                android:text="Fiat"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.3"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/model"
                app:layout_constraintRight_toRightOf="parent"
                style="@style/MyPersonalData2"


        />
        <TextView
                android:id="@+id/label3"
                android:text="Targa:"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.4"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label1"
                app:layout_constraintRight_toLeftOf="@+id/InTarga"
                style="@style/MyPersonalData1"

        />
        <TextView
                android:id="@+id/InTarga"
                android:text="AA000AA"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.6"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/marca"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/label3"
                style="@style/MyPersonalData2"


        />
        <TextView
                android:text="Propietario:"
                android:id="@+id/label4"

                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.4"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/label3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/username"
                style="@style/MyPersonalData1"

        />
        <TextView
                android:text="elena"
                android:id="@+id/username"
                android:layout_width="wrap_content"
                app:layout_constraintWidth_percent="0.3"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/InTarga"

                app:layout_constraintLeft_toRightOf="@+id/label4"
                style="@style/MyPersonalData2"
        />
        <TextView
                android:text="Costo:"
                android:id="@+id/label5"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.4"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/label4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/rate"
                style="@style/MyPersonalData1"
        />
        <TextView
                android:text="10"
                android:id="@+id/rate"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.6"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/username"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/label5"
                style="@style/MyPersonalData2"
        />
        <TextView
                android:text="Indirizzo:"
                android:id="@+id/label6"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.4"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/label5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/city"
                style="@style/MyPersonalData1"
        />
        <TextView
                android:text="Padova"
                android:id="@+id/city"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.6"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/rate"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/label6"
                style="@style/MyPersonalData2"
        />
        <TextView
                android:text="Pt:"
                android:layout_width="wrap_content"
                app:layout_constraintWidth_percent="0.15"
                android:layout_height="wrap_content"
                android:id="@+id/puntiLabel"
                app:layout_constraintLeft_toRightOf="@+id/username"
                app:layout_constraintTop_toBottomOf="@+id/InTarga"
                style="@style/MyPersonalData1"
        />
        <TextView
                android:id="@+id/punti"
                android:text="123"
                android:layout_width="wrap_content"
                app:layout_constraintWidth_percent="0.15"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/puntiLabel"
                app:layout_constraintTop_toBottomOf="@+id/InTarga"
                style="@style/MyPersonalData2"
        />
        <Button
                android:id="@+id/reserve"
                android:text="Prenota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/city"
                android:background="@drawable/button_leaderboard"
                android:layout_margin="5dp"
                android:padding="10dp"
        />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
