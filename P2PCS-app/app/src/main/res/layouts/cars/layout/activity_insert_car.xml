<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/zeroLine"
                    android:padding="10dp"
                    android:layout_margin="4dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"

            >

                <ImageView
                        android:id="@+id/carImage"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/car11"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"

                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/Name"
                />
                <Button
                        android:id="@+id/calendar_button"
                        android:text="Calendario disponibilitÃ "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/carImage"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                />
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"

                    android:background="@drawable/my_personal_data_line"
                    android:id="@+id/firstLine">

                <TextView
                        android:id="@+id/targaLabel"
                        android:text="Targa:"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.3"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/targaInsert"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"

                        android:gravity="center_horizontal"
                        style="@style/MyPersonalData1"
                />
                <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.5"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/targaLabel"



                        android:id="@+id/targaInsert">

                    <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:hint=""/>
                </android.support.design.widget.TextInputLayout>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"

                    android:background="@drawable/my_personal_data_line"
                    android:id="@+id/secondLine">

                <TextView
                        android:text="Marca:"
                        android:id="@+id/marcaLabel"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.3"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/marcaInsert"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:gravity="center_horizontal"
                        style="@style/MyPersonalData1"
                />
                <android.support.design.widget.TextInputLayout
                        android:id="@+id/marcaInsert"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.5"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/marcaLabel"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"


                >

                    <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint=""/>
                </android.support.design.widget.TextInputLayout>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:id="@+id/thirdLine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"

                    android:background="@drawable/my_personal_data_line">

                <TextView
                        android:id="@+id/modelloLabel"
                        android:text="Modello:"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.3"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/modelloInsert"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:gravity="center_horizontal"
                        style="@style/MyPersonalData1"
                />
                <android.support.design.widget.TextInputLayout
                        android:id="@+id/modelloInsert"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.5"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/modelloLabel"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"


                        >

                    <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint=""/>
                </android.support.design.widget.TextInputLayout>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:id="@+id/fourthLine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"

                    android:background="@drawable/my_personal_data_line">

                <TextView
                        android:id="@+id/annoLabel"
                        android:text="Anno:"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.3"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/annoInsert"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:gravity="center_horizontal"
                        style="@style/MyPersonalData1"

                />
                <android.support.design.widget.TextInputLayout
                        android:id="@+id/annoInsert"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.5"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/annoLabel"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" >

                    <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint=""/>
                </android.support.design.widget.TextInputLayout>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:id="@+id/fifthLine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"

                    android:background="@drawable/my_personal_data_line">

                <TextView
                        android:id="@+id/cavalliLabel"
                        android:text="Cavalli:"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.3"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/cavalliInsert"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:gravity="center_horizontal"
                        style="@style/MyPersonalData1"
                />

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/cavalliInsert"

                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.5"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/cavalliLabel"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                    <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint=""/>
                </android.support.design.widget.TextInputLayout>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:id="@+id/sixthLine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"

                    android:background="@drawable/my_personal_data_line">

                <TextView
                        android:id="@+id/cilindrataLabel"
                        android:text="Cilindrata:"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.3"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/cilindrataInsert"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:gravity="center_horizontal"
                        style="@style/MyPersonalData1"/>

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/cilindrataInsert"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.5"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/cilindrataLabel"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" >

                    <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint=""/>
                </android.support.design.widget.TextInputLayout>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:id="@+id/seventhLine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"

                    android:background="@drawable/my_personal_data_line">

                <TextView
                        android:id="@+id/raggioLabel"
                        android:text="Raggio consentito:"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.3"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/raggioInsert"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:gravity="center_horizontal"
                        style="@style/MyPersonalData1"
                />

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/raggioInsert"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.5"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/raggioLabel"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" >

                    <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint=""/>
                </android.support.design.widget.TextInputLayout>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:id="@+id/eigthLine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"

                    android:background="@drawable/my_personal_data_line">

                <TextView
                        android:id="@+id/tariffaLabel"
                        android:text="Tariffa oraria:"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.3"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/tariffaInsert"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:gravity="center_horizontal"
                        style="@style/MyPersonalData1"
                />
                <android.support.design.widget.TextInputLayout
                        android:id="@+id/tariffaInsert"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.5"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/tariffaLabel"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"  >

                    <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:hint=""/>
                </android.support.design.widget.TextInputLayout>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>