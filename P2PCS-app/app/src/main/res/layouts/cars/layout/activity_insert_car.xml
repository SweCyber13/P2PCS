<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/zeroLine"
                    android:padding="10dp"
                    android:layout_margin="4dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"

            >

                <ImageView
                        android:id="@+id/carImage"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.3"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/car11"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"

                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/Title"

                />
                <TextView
                        android:id="@+id/Title"
                        android:text="Inserisci una nuova macchina in P2PCS!"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.5"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/carImage"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:gravity="center"
                        style="@style/MyPersonalData1"
                        />
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"

                    android:background="@drawable/my_personal_data_line"
                    android:id="@+id/firstLine">

                <TextView
                        android:id="@+id/targaLabel"
                        android:text="Targa:"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.3"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/targaInsert"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"

                        android:gravity="center_horizontal"
                        style="@style/MyPersonalData1"
                />
                <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.5"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/targaLabel"



                        android:id="@+id/targaInsert">

                    <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:hint="targa"
                            android:gravity="center_horizontal" android:id="@+id/new_car_targa"/>
                </android.support.design.widget.TextInputLayout>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"

                    android:background="@drawable/my_personal_data_line"
                    android:id="@+id/secondLine">

                <TextView
                        android:text="Marca:"
                        android:id="@+id/marcaLabel"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.3"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/marcaInsert"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:gravity="center_horizontal"
                        style="@style/MyPersonalData1"
                />
                <android.support.design.widget.TextInputLayout
                        android:id="@+id/marcaInsert"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.5"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/marcaLabel"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"


                >

                    <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="marca"
                            android:gravity="center_horizontal" android:id="@+id/new_car_marca"/>
                </android.support.design.widget.TextInputLayout>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:id="@+id/thirdLine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"

                    android:background="@drawable/my_personal_data_line">

                <TextView
                        android:id="@+id/modelloLabel"
                        android:text="Modello:"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.3"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/modelloInsert"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:gravity="center_horizontal"
                        style="@style/MyPersonalData1"
                />
                <android.support.design.widget.TextInputLayout
                        android:id="@+id/modelloInsert"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.5"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/modelloLabel"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"


                        >

                    <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="modello"
                            android:gravity="center_horizontal" android:id="@+id/new_car_modello"/>
                </android.support.design.widget.TextInputLayout>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:id="@+id/fourthLine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"

                    android:background="@drawable/my_personal_data_line">

                <TextView
                        android:id="@+id/annoLabel"
                        android:text="Anno:"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.3"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/annoInsert"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:gravity="center_horizontal"
                        style="@style/MyPersonalData1"

                />
                <android.support.design.widget.TextInputLayout
                        android:id="@+id/annoInsert"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.5"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/annoLabel"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" >


                    <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintWidth_percent="0.5"

                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"

                            android:hint="anno di produzione"
                            android:gravity="center"
                            android:id="@+id/new_car_anno"/>
                </android.support.design.widget.TextInputLayout>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                    android:id="@+id/fourthOneLine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"

                    android:background="@drawable/my_personal_data_line">

                <TextView
                        android:id="@+id/chilometraggioLabel"
                        android:text="Chilometri:"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.3"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/chilometraggioInsert"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:gravity="center_horizontal"
                        style="@style/MyPersonalData1"

                />
                <android.support.design.widget.TextInputLayout
                        android:id="@+id/chilometraggioInsert"

                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.5"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/chilometraggioLabel"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                    <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Km effettuati"
                            android:gravity="center_horizontal" android:id="@+id/new_car_chilometraggio"/>
                </android.support.design.widget.TextInputLayout>
            </android.support.constraint.ConstraintLayout>



            <android.support.constraint.ConstraintLayout
                    android:id="@+id/fifthLine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"

                    android:background="@drawable/my_personal_data_line">

                <TextView
                        android:id="@+id/cavalliLabel"
                        android:text="Cavalli:"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.3"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/cavalliInsert"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:gravity="center_horizontal"
                        style="@style/MyPersonalData1"
                />

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/cavalliInsert"

                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.5"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/cavalliLabel"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                    <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="cavalli"
                android:gravity="center_horizontal" android:id="@+id/new_car_cavalli"/>
            </android.support.design.widget.TextInputLayout>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:id="@+id/sixthLine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"

                    android:background="@drawable/my_personal_data_line">

                <TextView
                        android:id="@+id/cilindrataLabel"
                        android:text="Cilindrata:"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.3"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/cilindrataInsert"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:gravity="center_horizontal"
                        style="@style/MyPersonalData1"/>

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/cilindrataInsert"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.5"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/cilindrataLabel"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" >

                    <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="cilindrata"
                            android:gravity="center_horizontal" android:id="@+id/new_car_cilindrata"/>
                </android.support.design.widget.TextInputLayout>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:id="@+id/seventhLine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"

                    android:background="@drawable/my_personal_data_line">

                <TextView
                        android:id="@+id/raggioLabel"
                        android:text="Raggio consentito:"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.3"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/new_car_raggio"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:gravity="center_horizontal"
                        style="@style/MyPersonalData1"
                />

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/new_car_raggio"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.5"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/raggioLabel"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" >

                    <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="km massimi"
                            android:gravity="center_horizontal"
                            android:id="@+id/new_car_raggio_max"

                    />
                </android.support.design.widget.TextInputLayout>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:id="@+id/seventhOneLine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"

                    android:background="@drawable/my_personal_data_line">
                <TextView
                        android:id="@+id/indirizzoLabel"
                        android:text="Indirizzo:"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.3"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/indirizzoInsert"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:gravity="center_horizontal"
                        style="@style/MyPersonalData1"
                />
                <android.support.design.widget.TextInputLayout
                        android:id="@+id/indirizzoInsert"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.5"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/indirizzoLabel"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                    <fragment
                            android:id="@+id/new_car_indirizzo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Inserisci la posizione"
                            style="@style/SearchEditText"
                            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                    />
                </android.support.design.widget.TextInputLayout>

            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:id="@+id/eigthLine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"

                    android:background="@drawable/my_personal_data_line">

                <TextView
                        android:id="@+id/tariffaLabel"
                        android:text="Tariffa oraria:"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.3"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/tariffaInsert"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:gravity="center_horizontal"
                        style="@style/MyPersonalData1"
                />
                <android.support.design.widget.TextInputLayout
                        android:id="@+id/tariffaInsert"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.5"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/tariffaLabel"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                    <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:hint="in euro" android:id="@+id/new_car_tariffa"/>
                </android.support.design.widget.TextInputLayout>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <Button
                        android:text="Aggiungi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/new_car_button"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        app:layout_constraintTop_toTopOf="parent"/>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>