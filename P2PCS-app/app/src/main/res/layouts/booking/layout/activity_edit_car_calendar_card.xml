<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:id="@+id/container">

    <android.support.constraint.ConstraintLayout

            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="35dp"
            android:paddingBottom="35dp"
            android:background="@drawable/leaderboard_background"
            tools:layout_editor_absoluteX="10dp">

        <TextView
                android:id="@+id/giornoLabel"
                android:text="Giorno disponibilità: "
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.55"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/data"
                style="@style/MyPersonalData1"


        />
        <TextView
                android:id="@+id/data"
                android:text="19 Agosto 2019"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.45"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/giornoLabel"
                style="@style/MyPersonalData2"
        />
        <TextView
                android:id="@+id/labelOra"
                android:text="Orario disponibilità:"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.55"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/giornoLabel"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/oraInizio"
                style="@style/MyPersonalData1"
        />
        <TextView
                android:id="@+id/oraInizio"
                android:text="09.00"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.18"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/data"
                app:layout_constraintLeft_toRightOf="@+id/labelOra"
                app:layout_constraintRight_toLeftOf="@+id/tratto"
                style="@style/MyPersonalData2"
        />
        <TextView
                android:id="@+id/tratto"
                android:text="-"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.07"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/data"
                app:layout_constraintLeft_toRightOf="@+id/oraInizio"
                app:layout_constraintRight_toLeftOf="@+id/oraFine"
                style="@style/MyPersonalData1"
        />
        <TextView
                android:id="@+id/oraFine"
                android:text="12.00"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.18"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/data"
                app:layout_constraintLeft_toRightOf="@+id/tratto"
                app:layout_constraintRight_toRightOf="parent"
                style="@style/MyPersonalData2"
        />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>

