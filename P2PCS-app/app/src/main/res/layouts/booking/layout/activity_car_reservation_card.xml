<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:id="@+id/container">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/cardDisp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"

            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/leaderboard_background"

            tools:layout_editor_absoluteX="10dp">

        <TextView
                android:id="@+id/label1"
                android:text="Proprietario:"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.6"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/luogo"
                style="@style/MyPersonalData1"


        />
        <TextView
                android:id="@+id/Username"
                android:text="1/08/2019"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.4"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/label1"
                style="@style/MyPersonalData2"


        />
        <TextView
                android:id="@+id/label2"
                android:text="Targa auto:"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.6"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/label1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/titolo"
                style="@style/MyPersonalData1"


        />
        <TextView
                android:id="@+id/targa"
                android:text="11:15"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.4"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/Username"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/label2"
                style="@style/MyPersonalData2"


        />
        <TextView
                android:id="@+id/label3"
                android:text="Data prenotazione:"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.6"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/label2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/giorno"
                style="@style/MyPersonalData1"

        />
        <TextView
                android:id="@+id/giorno"
                android:text="13:45"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.4"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/targa"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/label3"
                style="@style/MyPersonalData2"


        />
        <TextView
                android:text="Stato prenotazione:"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.6"
                android:layout_height="wrap_content" android:id="@+id/label4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label3"
                style="@style/MyPersonalData1"
        />
        <TextView
                android:text="accettata"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.4"
                android:layout_height="wrap_content" android:id="@+id/Stato"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/giorno"
                style="@style/MyPersonalData2"
        />

        <Button
                android:id="@+id/lol"
                android:text="Contatta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Stato"
                android:background="@drawable/button_leaderboard"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="10dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>