<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <android.support.constraint.ConstraintLayout
                android:id="@+id/carRequestsCardList"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_margin="15dp"
                android:layout_height="270dp"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/cardprenotazioni_layout"
        >

            <ImageView
                    android:id="@+id/userImage"
                    app:srcCompat="@drawable/avatar"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintWidth_percent="0.2"
                    app:layout_constraintHeight_percent="0.15"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/name"
                    app:layout_constraintBottom_toTopOf="@+id/carImage"

            />
            <TextView
                    android:id="@+id/name"
                    android:text="Nome"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintWidth_percent="0.4"
                    app:layout_constraintHeight_percent="0.15"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/userImage"
                    app:layout_constraintRight_toLeftOf="@+id/surname"
                    android:gravity="center"


            />
            <TextView

                    android:id="@+id/surname"
                    android:text="Cognome"
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent="0.4"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.15"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/name"
                    app:layout_constraintBottom_toTopOf="@+id/carTarga"

                    android:gravity="center"

            />
            <ImageView
                    android:id="@+id/carImage"
                    app:srcCompat="@drawable/car"
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent="0.2"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.15"
                    app:layout_constraintTop_toBottomOf="@+id/userImage"
                    app:layout_constraintLeft_toLeftOf="parent"

                    app:layout_constraintRight_toLeftOf="@+id/car"


            />
            <TextView
                    android:id="@+id/car"
                    android:text="Marca"
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent="0.4"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.15"
                    app:layout_constraintTop_toBottomOf="@+id/name"
                    app:layout_constraintLeft_toRightOf="@+id/carImage"
                    android:gravity="center"

            />
            <TextView
                    android:id="@+id/carTarga"
                    android:text="Targa"
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent="0.4"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.15"

                    app:layout_constraintTop_toBottomOf="@+id/surname"
                    app:layout_constraintLeft_toRightOf="@+id/car"
                    android:gravity="center"

            />

            <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                         android:layout_height="0dp"
                                                         app:layout_constraintHeight_percent="0.15"
                                                         app:layout_constraintTop_toBottomOf="@+id/carImage"
                                                         android:id="@+id/DataCard"

                                                         tools:layout_editor_absoluteX="10dp">

                <ImageView
                        android:id="@+id/calendarImage"
                        app:srcCompat="@drawable/ic_calendar"
                        android:layout_width="0dp"
                        android:padding="5dp"
                        app:layout_constraintWidth_percent="0.2"
                        android:layout_height="match_parent"

                        app:layout_constraintLeft_toLeftOf="parent"

                />
                <TextView
                        android:id="@+id/date"
                        android:text="Data"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.8"
                        android:layout_height="match_parent"
                        app:layout_constraintLeft_toRightOf="@+id/calendarImage"
                        android:gravity="center"

                        app:layout_constraintEnd_toEndOf="parent"
                />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                         android:layout_height="0dp"
                                                         app:layout_constraintHeight_percent="0.15"
                                                         app:layout_constraintTop_toBottomOf="@+id/DataCard"
                                                         android:id="@+id/Data1Card"

                                                         tools:layout_editor_absoluteX="10dp">

                <ImageView

                        android:id="@+id/clockimage"

                        app:srcCompat="@drawable/ic_clock"
                        android:layout_width="0dp"
                        android:padding="5dp"
                        app:layout_constraintWidth_percent="0.2"
                        android:layout_height="match_parent"


                        app:layout_constraintLeft_toLeftOf="parent"
                />
                <!--padding perchè immagine caledaio è troppo grossa-->


                <TextView
                        android:id="@+id/startTime"
                        android:text="00.00"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.4"
                        android:layout_height="match_parent"
                        app:layout_constraintLeft_toRightOf="@+id/clockimage"
                        android:gravity="center"

                />
                <TextView
                        android:id="@+id/endTime"
                        android:text="00.00"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.4"
                        android:layout_height="match_parent"
                        app:layout_constraintLeft_toRightOf="@+id/startTime"
                        android:gravity="center"

                />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                    android:id="@+id/PriceCard"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.15"
                    app:layout_constraintTop_toBottomOf="@+id/Data1Card" tools:layout_editor_absoluteX="10dp">

                <ImageView
                        android:id="@+id/priceImage"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.2"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/money"
                        android:paddingTop="10dp"

                        app:layout_constraintTop_toTopOf="parent"

                        app:layout_constraintRight_toLeftOf="@+id/price"
                        app:layout_constraintLeft_toLeftOf="parent"
                />
                <TextView
                        android:id="@+id/price"
                        android:text="Prezzo"
                        android:textAlignment="center"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.8"
                        android:layout_height="match_parent"
                        app:layout_constraintHeight_percent="0.2"
                        app:layout_constraintTop_toTopOf="parent"

                        app:layout_constraintLeft_toRightOf="@+id/priceImage"
                        app:layout_constraintRight_toRightOf="parent"

                        android:gravity="center"


                />

            </android.support.constraint.ConstraintLayout>

            <Button
                    android:id="@+id/rifiutaButton"
                    android:text="Rifiuta"
                    android:layout_width="125dp"
                    app:layout_constraintWidth_percent="0.30"
                    android:layout_height="48dp"

                    app:layout_constraintRight_toLeftOf="@id/accettaButton"
                    app:layout_constraintTop_toBottomOf="@+id/PriceCard"
                    app:layout_constraintBottom_toBottomOf="parent"


                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
            <Button
                    android:id="@+id/accettaButton"
                    android:text="Accetta"
                    android:layout_width="135dp"
                    app:layout_constraintWidth_percent="0.30"
                    android:layout_height="48dp"


                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/PriceCard"
                    app:layout_constraintBottom_toBottomOf="parent"

                    android:layout_marginRight="8dp"/>


        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
    </ScrollView>
