<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:id="@+id/container">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/cardDisp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="35dp"
            android:paddingBottom="35dp"
            android:background="@drawable/leaderboard_background"

    >

        <TextView
                android:id="@+id/label1"
                android:text="Contatta il proprietario della macchina:"
                android:layout_width="match_parent"
                app:layout_constraintWidth_percent="0.6"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                style="@style/MyPersonalData1"


        />
        <TextView
                android:id="@+id/luogo"
                android:text="eligiall@gmail.com"
                android:layout_width="match_parent"
                app:layout_constraintWidth_percent="0.4"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/label1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                style="@style/MyPersonalData2"
                android:gravity="center"


        />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>