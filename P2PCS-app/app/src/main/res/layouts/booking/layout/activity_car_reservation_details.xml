<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/Map"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/firstLine"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"


    >

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:srcCompat="@drawable/map" android:id="@+id/imageView"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:id="@+id/first_line"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.12"

            app:layout_constraintTop_toBottomOf="@id/Map"
            app:layout_constraintBottom_toTopOf="@+id/second_line"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"


            style="@style/CarReservationLineLayout"
            android:background="@drawable/my_personal_data_line"


    >

        <ImageView
                android:id="@+id/user_image"
                app:srcCompat="@drawable/ic_action_name"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.2"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="parent"


                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/CarReservationImageLayout"
        />
        <TextView
                android:id="@+id/name"
                android:text="Ele"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.4"
                android:layout_height="wrap_content"

                app:layout_constraintLeft_toRightOf="@+id/user_image"
                app:layout_constraintRight_toLeftOf="@+id/surname"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                style="@style/CarReservationTextLayout"


        />
        <TextView
                android:id="@+id/surname"
                android:text="Pontecchiani"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.4"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/name"
                app:layout_constraintRight_toRightOf="parent"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                style="@style/CarReservationTextLayout"

        />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:id="@+id/second_line"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintTop_toBottomOf="@id/first_line"


            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            style="@style/CarReservationLineLayout"
            android:background="@drawable/my_personal_data_line"

    >
        <ImageView
                android:id="@+id/car_image"
                app:srcCompat="@drawable/car"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.2"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/carBrand"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/CarReservationImageLayout"

        />
        <TextView
                android:id="@+id/carBrand"
                android:text="Opel"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.4"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/car_image"
                app:layout_constraintRight_toLeftOf="@id/carModel"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/CarReservationTextLayout"
        />
        <TextView
                android:id="@+id/carModel"
                android:text="Corsa"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.4"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/carBrand"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/CarReservationTextLayout"
        />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:id="@+id/third_line"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintTop_toBottomOf="@id/second_line"


            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            style="@style/CarReservationLineLayout"
            android:background="@drawable/my_personal_data_line"

    >

        <ImageView
                android:id="@+id/calendarImageStart"
                app:srcCompat="@drawable/ic_calendar"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.2"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/startDate"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/CarReservationImageLayout"
        />
        <TextView
                android:id="@+id/startDate"
                android:text="TextView"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.4"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/calendarImageStart"
                app:layout_constraintRight_toLeftOf="@id/startTime"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/CarReservationTextLayout"
        />
        <TextView
                android:id="@+id/startTime"
                android:text="TextView"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.4"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/startDate"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/CarReservationTextLayout"
        />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:id="@+id/fourth_line"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintTop_toBottomOf="@id/third_line"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            style="@style/CarReservationLineLayout"
            android:background="@drawable/my_personal_data_line"
    >

        <ImageView
                android:id="@+id/calendarImageEnd"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.2"
                android:layout_height="0dp"
                app:srcCompat="@drawable/ic_calendar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/endDate"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/CarReservationImageLayout"

                />
        <TextView
                android:id="@+id/endDate"
                android:text="TextView"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.4"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/calendarImageEnd"
                app:layout_constraintRight_toLeftOf="@id/endTime"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/CarReservationTextLayout"
        />
        <TextView
                android:id="@+id/endTime"
                android:text="TextView"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.4"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/endDate"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/CarReservationTextLayout"
        />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:id="@+id/Review"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintTop_toBottomOf="@id/fourth_line"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/my_personal_data_line"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"


    >
        <TextView
                android:id="@+id/review_title"
                android:text="Review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"


                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                style="@style/MyPersonalData1"

                android:gravity="center"
        />
        <android.support.design.widget.TextInputLayout
                android:id="@+id/review_text"
                android:layout_width="match_parent"
                android:layout_height="200dp"

                app:layout_constraintTop_toBottomOf="@+id/review_title"
                app:layout_constraintBottom_toBottomOf="parent"


                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"


        >

            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint=""/>
        </android.support.design.widget.TextInputLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>