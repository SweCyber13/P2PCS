<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:id="@+id/container">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/cardDisp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="35dp"
            android:paddingBottom="35dp"
            android:background="@drawable/leaderboard_background"

    >

        <TextView
                android:id="@+id/label1"
                android:text="Seleziona il giorno:"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.6"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/luogo"
                style="@style/MyPersonalData1"


        />
        <TextView
                android:id="@+id/luogo"
                android:text="1/08/2019"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.4"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/label1"
                style="@style/MyPersonalData2"



        />
        <TextView
                android:id="@+id/label2"
                android:text="Seleziona ora inizio:"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.6"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/label1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/titolo"
                style="@style/MyPersonalData1"


        />
        <TextView
                android:id="@+id/titolo"
                android:text="11:15"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.4"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/luogo"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/label2"
                style="@style/MyPersonalData2"


        />
        <TextView
                android:id="@+id/label3"
                android:text="Seleziona ora fine:"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.6"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/label2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/descrizione"
                style="@style/MyPersonalData1"

        />
        <TextView
                android:id="@+id/descrizione"
                android:text="13:45"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.4"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/titolo"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/label3"
                style="@style/MyPersonalData2"


        />
    </android.support.constraint.ConstraintLayout>
    <Button
            android:id="@+id/reserve"
            android:text="Aggiungi la disponibilitÃ "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardDisp"
            android:textColor="@color/white"
            android:background="@drawable/mycar_internal_button_background"
            android:layout_marginTop="20dp"
            android:padding="10dp"
    />
</android.support.constraint.ConstraintLayout>