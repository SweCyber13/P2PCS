<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">


    <TextView
            android:text="Seleziona Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startDataLabel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            style="@style/MyPersonalData1"
            android:background="@drawable/mycar_button_background"/>
    <TextView
            android:text="01/08/2019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startData"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/startDataLabel"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            style="@style/MyPersonalData1"
            android:background="@drawable/mycar_button_background"/>
    <TextView
            android:text="Seleziona ora inizio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/startTimeLabel"
            app:layout_constraintTop_toBottomOf="@+id/startDataLabel"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            style="@style/MyPersonalData1"
            android:background="@drawable/mycar_button_background"/>
    <TextView
            android:text="11:15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startTime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/startTimeLabel" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/startData" android:layout_marginTop="24dp"
            style="@style/MyPersonalData1"
            android:background="@drawable/mycar_button_background"/>
    <TextView
            android:text="Seleziona ora fine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/endTimeLabel"
            app:layout_constraintTop_toBottomOf="@+id/startTimeLabel"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            style="@style/MyPersonalData1"
            android:background="@drawable/mycar_button_background"/>
    <TextView
            android:text="13:45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/endTime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/endTimeLabel" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/startTime" android:layout_marginTop="24dp"
            style="@style/MyPersonalData1"
            android:background="@drawable/mycar_button_background"/>
    <Button
            android:text="Aggiungi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_marginTop="8dp"  app:layout_constraintTop_toBottomOf="@+id/endTimeLabel"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            />
</android.support.constraint.ConstraintLayout>