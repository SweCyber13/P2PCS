<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
            android:id="@+id/mission_card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:cardUseCompatPadding="true">
        <android.support.constraint.ConstraintLayout
                android:id="@+id/mission_card"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:padding="1dp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/mycar_button_background">

            <ImageView
                android:id="@+id/missionLogo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/mission_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.15"
                app:srcCompat="@drawable/car"/>

            <View
                android:id="@+id/divider1"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/quantum_black_divider"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@id/missionLogo"/>

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/missionDescriptionLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@id/divider2"
                app:layout_constraintStart_toEndOf="@id/divider1"
                app:layout_constraintWidth_percent="0.3">

                <TextView
                    android:id="@+id/missionTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/mission_title_example"
                    android:layout_gravity="start"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/missionDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/mission_description_example"/>

            </android.support.v7.widget.LinearLayoutCompat>

            <View
                android:id="@+id/divider2"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/quantum_black_divider"
                android:visibility="visible"
                tools:visibility="visible"
                app:layout_constraintStart_toEndOf="@id/missionDescriptionLayout"/>

            <TextView
                    android:text="@string/mission_pts_reward"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/puntiRank"
                    app:layout_constraintTop_toTopOf="parent"

                    app:layout_constraintWidth_percent="0.15"
                  app:layout_constraintStart_toStartOf="@id/divider2"
                    android:gravity="center"/>
            <TextView
                    android:text="10 punti buoni"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/puntiBuoni"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintWidth_percent="0.15"
                    android:gravity="center"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>