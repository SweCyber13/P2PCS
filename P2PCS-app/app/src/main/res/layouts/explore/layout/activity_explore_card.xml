<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    >
        <android.support.constraint.ConstraintLayout

                android:layout_width="match_parent"

                android:layout_height="250dp">

            <ImageView
                    android:background="@drawable/green_gradient"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/free_ticket"
                    android:id="@+id/imageoffer"
                    android:backgroundTint="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.30"
            >

                <Button
                        android:background="@drawable/button_info_style"
                        android:text="info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/info1"
                        app:layout_constraintRight_toRightOf="@id/line_right_button"
                        app:layout_constraintBottom_toBottomOf="@id/line_bottom"
                        app:layout_constraintTop_toTopOf="@id/line_top"

                />
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:src="@drawable/black_gradient"
                        android:id="@+id/InfoBar"

                        app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                        android:text="Cinema"
                        app:layout_constraintLeft_toLeftOf="@id/line_left"
                        app:layout_constraintTop_toTopOf="@id/line_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/nome1"

                        style="@style/ExploreTextView"/>
                <TextView
                        android:text="Biglietto gratuito"
                        app:layout_constraintLeft_toLeftOf="@id/line_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/titolo1"
                        app:layout_constraintBottom_toBottomOf="@id/line_bottom"
                        style="@style/ExploreTextView"/>

                <android.support.constraint.Guideline
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/line_bottom"

                        app:layout_constraintGuide_percent="0.90"/>
                <android.support.constraint.Guideline
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintGuide_percent="0.99"
                        android:id="@+id/line_right_button"/>
                <android.support.constraint.Guideline
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintGuide_percent="0.25"
                        android:id="@+id/line_top"/>
                <android.support.constraint.Guideline
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintGuide_percent="0.05"
                        android:id="@+id/line_left"/>
            </android.support.constraint.ConstraintLayout>


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>