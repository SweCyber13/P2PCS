<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_margin="5dp"
                                             android:layout_marginTop="10dp"
>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.30"
            android:id="@+id/image_explore"
            tools:ignore="MissingConstraints"
            android:src="@drawable/offerta"


    />

    <TextView
            android:text="Cinema" android:id="@+id/placeF"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.06"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/image_explore"
            android:textSize="24dp"

    />

    <TextView
            android:text="Biglietto gratuito" android:id="@+id/titleF"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.06"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/placeF"
            android:textSize="24dp"
    />
    <TextView
            android:text="Se vieni al cinema con il servizio di carsharing avrai un ingresso omaggio"
            android:id="@+id/descriptionF"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.58"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/titleF"
            android:textSize="24dp"
            tools:layout_editor_absoluteX="0dp"/>



</android.support.constraint.ConstraintLayout>

