<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/white">
    <!--menu missioni/classifiche-->
    <!--menu 3 tipi di classifiche-->
    <!-- immagini e titolo-->
    <TextView
            android:text="Classifica Locale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TitlePuntiRank"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/imageRank"

    />
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp" app:srcCompat="@drawable/ranking"
            android:id="@+id/imageCup"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/TitlePuntiRank"
    />
    <!--classifica-->
    <android.support.constraint.ConstraintLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imageCup"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
        <TextView
                android:text="Posizione"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/positionLabel"
                app:layout_constraintWidth_percent="0.33"
                app:layout_constraintLeft_toLeftOf="parent"
                style="@style/LeaderboardsTextView"


        />
        <TextView

                android:text="Username"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/usernameLabel"
                app:layout_constraintWidth_percent="0.34"
                app:layout_constraintLeft_toRightOf="@id/positionLabel"
                style="@style/LeaderboardsTextView"

        />
        <TextView

                android:text="Punteggio"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.33"
                android:layout_height="match_parent"
                android:id="@+id/rankLabel"
                app:layout_constraintRight_toRightOf="parent"
                style="@style/LeaderboardsTextView"
                app:layout_constraintTop_toTopOf="parent"
        />

        <android.support.v7.widget.RecyclerView
                android:id="@+id/localLeaderboardRecycleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/positionLabel"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>