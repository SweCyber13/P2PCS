<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <!-- Search page -->
    <style name="SearchRelativeLayout">
        <item name="android:layout_marginTop">10dp</item>

    </style>
    <style name="SearchEditText">
        <item name="android:alpha">100</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="SearchImageView">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>

    </style>
    <style name="LeaderboardsTextView">
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>


    <!-- Homepage -->
    <style name="HomeTextView">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#356859</item>
        <item name="android:textColorHighlight">#B9E4C9</item>
        <item name="android:typeface">sans</item>
        <item name="android:textAppearanceLarge">true</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="HomeTitleTextView">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">23dp</item>
        <item name="android:textColor">#37966F</item>
        <item name="android:textColorHighlight">#B9E4C9</item>
        <item name="android:typeface">sans</item>
        <item name="android:textAppearanceLarge">true</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="HomeMainButton">
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#37966F</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">1.52</item>
        <item name="android:gravity">center</item>


    </style>




</resources>
