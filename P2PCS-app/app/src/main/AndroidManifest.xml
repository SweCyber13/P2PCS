<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.p2pcs_app">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true">
        <activity android:name=".CarNew.ActivityNewCar"
                  android:label="Inserisci auto">
        </activity>
        <!--
             The API key for Google Maps-based APIs is defined as a string resource.
             (See the file "res/values/google_maps_api.xml").
             Note that the API key is linked to the encryption key used to sign the APK.
             You need a different API key for each encryption key, including the release key that is used to
             sign the APK for publishing.
             You can define the keys for the debug and release targets in src/debug/ and src/release/.
        -->
        <meta-data
                android:name="com.google.android.geo.API_KEY"
                android:value="@string/google_maps_key"/>

        <activity
                android:name=".SearchResult.SearchResultMap.MapsActivity"
                android:label="@string/title_activity_maps">
        </activity>
        <activity
                android:name=".EditCarCalendar.ActivityEditCarCalendar"
                android:label="Disponibilità auto">
        </activity>
        <activity
                android:name=".EditCarCalendar.ActivityAddAvaiability"
                android:label="Aggiungi disponibilità">
        </activity>
        <activity
                android:name=".Cars.ActivityCars"
                android:label="Le mie auto">
        </activity>
        <activity
                android:name=".Search.ActivitySearch"
                android:label="Ricerca auto">
        </activity>
        <activity
                android:name=".SearchResult.ActivitySearchresult"
                android:label="Risultati ricerca">
        </activity>
        <activity
                android:name=".LeaderBoard.ActivityLeaderboard"
                android:label="Classifiche">
        </activity>
        <activity
                android:name=".VisualizzaMacchinaActivity"
                android:label="Visualizza Auto">
        </activity>

        <activity
                android:name=".ActivityGamification.ActivityGamification"
                android:label="Dati gamification">
        </activity>
        <activity
                android:name=".Tutorial.WelcomeActivity"
                android:label="Dati gamification">
        </activity>
        <activity
                android:name=".EditCar.ActivityEditCar"
                android:label="Modifica Auto">
        </activity>
        <activity
                android:name=".Coupons.Coupons"
                android:label="Premi e Coupons">
        </activity>
        <activity
                android:name=".Mission.ActivityMission"
                android:label="Missioni">
        </activity>
        <activity
                android:name=".login_register_cognito.ConfirmRegistration.ActivityConfirmRegister"
                android:label="Conferma Registrazione">
        </activity>
        <activity
                android:name=".login_register_cognito.Registration.ActivityRegister"
                android:label="Registrazione">
        </activity>
        <activity
                android:name=".login_register_cognito.Login.ActivityLogin"
                android:label="Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".MainActivity"
                android:label="P2PCS">
        </activity>
        <activity android:name=".Explore.ActivityExplore"/>

        <uses-library
                android:name="org.apache.http.legacy"
                android:required="false"/>
    </application>

</manifest>